<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="24dp">

    <!-- Drag Handle -->
    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" />

    <!-- Image -->
    <FrameLayout
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_badge_missed">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/delete_icon" />
    </FrameLayout>

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/manrope_extrabold"
        android:text="@string/del_msg"
        android:textColor="@color/Ebony"
        android:textSize="20sp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tv_delete_subtitle"
        android:text="@string/sub_del_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp"
        android:fontFamily="@font/manrope_regular"
        android:gravity="center"
        android:textColor="@color/StateGray"
        android:textSize="14sp" />

    <!-- Medicine info card -->
    <LinearLayout
        android:id="@+id/med_info_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_rounded_input"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Medicine icon circle -->
        <FrameLayout
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_badge_upcoming">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/pill_24dp_icon"
                app:tint="@color/junglegreen" />
        </FrameLayout>

        <!-- Med name + dosage -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_med_name_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_bold"
                android:text="@string/del_med_name"
                android:textColor="@color/Ebony"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_med_detail_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/manrope_regular"
                android:text="@string/del_dosage_med"
                android:textColor="@color/junglegreen"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Delete button -->
    <Button
        android:id="@+id/btn_confirm_delete"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="24dp"
        app:icon="@drawable/ic_delete"
        app:iconGravity="textStart"
        android:drawableTint="@color/white"
        android:fontFamily="@font/manrope_bold"
        android:text="@string/del_btn_confirm"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:backgroundTint="@color/burnetSienna" />

    <!-- Cancel button -->
    <Button
        android:id="@+id/btn_cancel_delete"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/manrope_semibold"
        android:text="@string/cancel_btn_confirm"
        android:textColor="@color/junglegreen"
        android:textSize="15sp"
        app:strokeColor="@color/BorderColor" />

    <!-- Safety protocol footer -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/shield_24dp_icon"
            app:tint="@color/StateGray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/manrope_semibold"
            android:letterSpacing="0.08"
            android:text="@string/safety_protocol"
            android:textAllCaps="true"
            android:textColor="@color/StateGray"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>