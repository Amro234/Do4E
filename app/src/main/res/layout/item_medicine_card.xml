<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/bg_medicine_card"
    android:elevation="4dp"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Name + Status badge -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_med_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/manrope_bold"
            android:textColor="@color/Ebony"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_med_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_badge_upcoming"
            android:fontFamily="@font/manrope_semibold"
            android:paddingHorizontal="16dp"
            android:paddingVertical="4dp"
            android:textColor="@color/SkyBlue"
            android:textSize="12sp" />
    </RelativeLayout>

    <!-- Time row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_clock"
            app:tint="@color/StateGray" />

        <TextView
            android:id="@+id/tv_med_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/manrope_medium"
            android:textColor="@color/StateGray"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Course progress labels -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tv_progress_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_bold"
            android:text="COURSE PROGRESS"
            android:textColor="@color/StateGray"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_day_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/manrope_bold"
            android:textColor="@color/StateGray"
            android:textSize="10sp" />
    </RelativeLayout>

    <!-- Progress bar -->
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:progress="0"
        app:indicatorColor="@color/junglegreen"
        app:trackColor="@color/ProgressTrack"
        app:trackCornerRadius="4dp"
        app:trackThickness="8dp" />

    <!-- Action row: edit / delete + next dose / log now -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <!-- Edit icon -->
        <ImageView
            android:id="@+id/btn_edit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_edit"
            app:tint="@color/junglegreen" />

        <!-- Delete icon -->
        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/btn_edit"
            android:src="@drawable/ic_delete"
            app:tint="@color/Crimson" />

        <!-- Next dose label -->
        <TextView
            android:id="@+id/tv_next_dose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/manrope_medium"
            android:textColor="@color/StateGray"
            android:textSize="12sp" />

        <!-- Log Now button (shown for active meds) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_log_now"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/junglegreen"
            android:fontFamily="@font/manrope_bold"
            android:paddingHorizontal="24dp"
            android:text="Log Now"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone"
            app:cornerRadius="20dp" />
    </RelativeLayout>

</LinearLayout>