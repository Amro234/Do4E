<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PolshiedWhite"
    tools:context=".ui.meds.my_medicines">

    <!-- Header -->
    <LinearLayout
        android:layout_marginTop="16dp"
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/manrope_bold"
            android:text="@string/my_medicines_title"
            android:textAlignment="center"
            android:textColor="@color/Ebony"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- ─── Tabs (Always Visible) ────────────────────────────────────────────── -->
    <LinearLayout
        android:id="@+id/tabs_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:scrollbars="none"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/bg_tab_container"
                android:orientation="horizontal"
                android:padding="4dp"
                android:minWidth="0dp">

                <TextView
                    android:id="@+id/tab_today"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/tab_today"
                    android:background="@drawable/bg_tab_selected"
                    android:textColor="@color/junglegreen"
                    android:fontFamily="@font/manrope_semibold" />

                <TextView
                    android:id="@+id/tab_daily"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Daily"
                    android:textColor="@color/StateGray"
                    android:fontFamily="@font/manrope_semibold" />

                <TextView
                    android:id="@+id/tab_weekly"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/tab_weekly"
                    android:textColor="@color/StateGray"
                    android:fontFamily="@font/manrope_semibold" />

                <TextView
                    android:id="@+id/tab_monthly"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/tab_monthly"
                    android:textColor="@color/StateGray"
                    android:fontFamily="@font/manrope_semibold" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- ─── Empty State (using user's layout) ──────────────────────────────── -->
    <include
        layout="@layout/medicine_no"
        android:id="@+id/medicine_no_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tabs_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ─── Medicine List (shown when medicines exist) ───────────────────── -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/medicines_list_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tabs_container"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/manrope_bold"
                android:text="@string/upcoming_recent"
                android:textColor="@color/Ebony"
                android:textSize="18sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_medicines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="80dp"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- FAB (shown only when medicines exist) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:backgroundTint="@color/junglegreen"
        android:src="@drawable/ic_plus_24px"
        android:visibility="gone"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearanceOverlay="@style/CircleAppearance" />

</androidx.constraintlayout.widget.ConstraintLayout>